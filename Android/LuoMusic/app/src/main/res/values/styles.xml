<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 漂浮在菜单栏之下 -->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--<item name="android:navigationBarColor">@color/transparent</item>-->
    </style>
    <style name="startAppTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <!-- 底部导航栏 -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>
    <style name="textStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="imageBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="AppTheme.Music" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="@colorPrimary">@color/colorPrimary</item>

    </style>
    <style name="transparentAppTheme" parent="AppTheme.Music"></style>
    <!-- 播放音乐页 -->
    <style name="MusicPlay" parent="AppTheme.NoActionBar">
        <item name="android:colorPrimaryDark">#1f4732</item>
    </style>
    <style name="login">
        <!-- 波纹的颜色 -->
        <item name="android:colorControlHighlight">@color/colorAll02</item>
        <!-- 选中的颜色 -->
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="loginEditText" parent="Theme.AppCompat.Light">
        <!-- 正常状态下的颜色 -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- 获得焦点时的颜色 -->
        <item name="colorControlActivated">@color/colorAll04</item>
    </style>


    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
